---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #1a1a1a;
    background: #ffffff;
    line-height: 1.6;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #000000;
    color: #ffffff;
    padding: 12px 24px;
    font-weight: 500;
    font-size: 14px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    letter-spacing: -0.01em;
  }

  .btn:hover {
    background: #333333;
    transform: translateY(-1px);
  }

  .btn-outline {
    background: transparent;
    color: #000000;
    border: 1px solid #e5e5e5;
  }

  .btn-outline:hover {
    background: #f8f8f8;
    border-color: #d4d4d4;
  }

  .btn-large {
    padding: 16px 32px;
    font-size: 16px;
    font-weight: 600;
  }

  h1, h2, h3, h4, h5, h6 {
    font-weight: 700;
    letter-spacing: -0.02em;
    color: #000000;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  h2 {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  h3 {
    font-size: 1.5rem;
    line-height: 1.3;
    margin-bottom: 0.75rem;
  }

  p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: #666666;
    margin-bottom: 1.5rem;
  }

  .text-large {
    font-size: 1.25rem;
    line-height: 1.6;
  }

  .text-small {
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .section {
    padding: 80px 0;
  }

  .section-sm {
    padding: 60px 0;
  }

  .grid {
    display: grid;
    gap: 2rem;
  }

  .grid-2 {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .grid-3 {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }

  .card {
    background: #ffffff;
    border: 1px solid #f0f0f0;
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.2s ease;
  }

  .card:hover {
    border-color: #e0e0e0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  @media (max-width: 1024px) {
    .container {
      padding: 0 20px;
    }

    .section {
      padding: 70px 0;
    }

    .section-sm {
      padding: 50px 0;
    }

    h1 {
      font-size: clamp(2rem, 4vw, 3rem);
    }

    h2 {
      font-size: clamp(1.5rem, 2.5vw, 2rem);
    }

    p {
      font-size: 1rem;
    }
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 16px;
    }

    .section {
      padding: 60px 0;
    }

    .section-sm {
      padding: 40px 0;
    }

    .grid {
      gap: 1.5rem;
    }

    .card {
      padding: 1.5rem;
    }

    h1 {
      font-size: clamp(1.75rem, 6vw, 2.5rem);
    }

    h2 {
      font-size: clamp(1.5rem, 4vw, 1.875rem);
    }

    p {
      font-size: 0.95rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 12px;
    }

    .section {
      padding: 50px 0;
    }

    .section-sm {
      padding: 30px 0;
    }

    .grid {
      gap: 1.25rem;
    }

    .card {
      padding: 1.25rem;
      border-radius: 8px;
    }

    .btn {
      padding: 10px 20px;
      font-size: 0.875rem;
    }

    .btn-large {
      padding: 14px 28px;
      font-size: 0.95rem;
    }

    h1 {
      font-size: clamp(1.5rem, 8vw, 2rem);
      margin-bottom: 1rem;
    }

    h2 {
      font-size: clamp(1.25rem, 6vw, 1.5rem);
      margin-bottom: 0.75rem;
    }

    h3 {
      font-size: 1.125rem;
      margin-bottom: 0.5rem;
    }

    p {
      font-size: 0.9rem;
      line-height: 1.6;
      margin-bottom: 1.25rem;
    }

    .text-large {
      font-size: 1rem;
    }

    .text-small {
      font-size: 0.8rem;
    }
  }
</style>