        </ul>
        
        <a href="https://t.me/captainsaid" class="btn btn-outline" style="width: 100%; justify-content: center;">Join Premium Chat</a>
      </div>
    </div>
  </div>
</section>

<style>
  .pricing-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 4rem;
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .pricing-card {
    background: #ffffff;
    border: 1px solid #f0f0f0;
    border-radius: 16px;
    padding: 2rem;
    position: relative;
    transition: all 0.2s ease;
  }

  .pricing-card:hover {
    border-color: #e0e0e0;
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  .pricing-card-featured {
    border-color: #000000;
  }

  .pricing-card-featured:hover {
    transform: translateY(-4px);
  }

  .pricing-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: #000000;
    color: #ffffff;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pricing-card-featured .pricing-badge {
    background: #000000;
  }

  .pricing-card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    margin-top: 1rem;
  }

  .pricing-price {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .price {
    font-size: 3rem;
    font-weight: 800;
    color: #000000;
    line-height: 1;
  }

  .period {
    font-size: 1rem;
    color: #666666;
  }

  .pricing-description {
    font-size: 1rem;
    color: #666666;
    margin-bottom: 2rem;
  }

  .pricing-features {
    list-style: none;
    margin-bottom: 2rem;
  }

  .pricing-features li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
    color: #333333;
  }

  .pricing-features svg {
    color: #22c55e;
    flex-shrink: 0;
  }

  @media (max-width: 1024px) {
    .pricing-cards {
      max-width: 800px;
    }

    .pricing-card {
      padding: 1.75rem;
    }
  }

  @media (max-width: 768px) {
    .pricing-cards {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .pricing-card {
      padding: 1.5rem;
    }

    .pricing-card h3 {
      font-size: 1.25rem;
    }

    .price {
      font-size: 2.5rem;
    }

    .pricing-features li {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 480px) {
    .pricing-cards {
      gap: 1.25rem;
    }

    .pricing-card {
      padding: 1.25rem;
    }

    .pricing-card h3 {
      font-size: 1.125rem;
      margin-top: 0.75rem;
    }

    .price {
      font-size: 2rem;
    }

    .pricing-description {
      font-size: 0.9rem;
      margin-bottom: 1.5rem;
    }

    .pricing-features {
      margin-bottom: 1.5rem;
    }

    .pricing-features li {
      font-size: 0.8rem;
      margin-bottom: 0.5rem;
    }
  }
</style>
</section>