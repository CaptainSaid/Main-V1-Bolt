<style>
  .hero {
    padding: 120px 0 80px;
    background: 
      radial-gradient(ellipse at top, rgba(59, 130, 246, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at bottom, rgba(14, 165, 233, 0.12) 0%, transparent 50%),
      linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      repeating-linear-gradient(
        90deg,
        transparent,
        transparent 100px,
        rgba(59, 130, 246, 0.02) 100px,
        rgba(59, 130, 246, 0.02) 200px
      );
    pointer-events: none;
    animation: wave-flow 20s linear infinite;
  }

  @keyframes wave-flow {
    0% { transform: translateX(0); }
    100% { transform: translateX(-200px); }
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    color: #ffffff;
  }

  .hero-title h1 {
    color: #ffffff;
  }

  .hero-subtitle {
    color: #e2e8f0;
    color: #ffffff;
  }

  .hero-title h1 {
    color: #ffffff;
  }

  .hero-subtitle {
    color: #e2e8f0;
  }

  .questions-section {
    margin-bottom: 4rem;
  }

  .question {
    margin-bottom: 1.5rem;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.2s ease;
    backdrop-filter: blur(10px);
    backdrop-filter: blur(10px);
  }

  .question:hover {
    border-color: #e0e0e0;
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .question h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #333333;
    margin: 0;
    line-height: 1.4;
  }

  .solution-section {
    background: 
      linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%),
      radial-gradient(circle at 30% 30%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
    color: #ffffff;
    padding: 3rem 2rem;
    border-radius: 16px;
    margin-top: 2rem;
    position: relative;
    overflow: hidden;
  }

  .solution-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      repeating-linear-gradient(
        45deg,
        transparent,
        transparent 50px,
        rgba(59, 130, 246, 0.05) 50px,
        rgba(59, 130, 246, 0.05) 100px
      );
    pointer-events: none;
    animation: diagonal-flow 15s linear infinite;
  }

  @keyframes diagonal-flow {
    0% { transform: translateX(0) translateY(0); }
    100% { transform: translateX(-100px) translateY(-100px); }
  }

  .solution-section h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #ffffff;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #cccccc;
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-actions {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .hero-actions .btn {
    background: #ffffff;
    color: #000000;
    font-weight: 600;
  }

  .hero-actions .btn:hover {
    background: #f0f0f0;
    transform: translateY(-1px);
  }

  .guarantee {
    font-size: 0.875rem;
    color: #999999;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .hero {
      padding: 100px 0 60px;
    }

    .questions-section {
      margin-bottom: 3rem;
    }

    .question {
      padding: 0.875rem 1.5rem;
      margin-bottom: 1.25rem;
    }

    .question h2 {
      font-size: 1.125rem;
    }

    .solution-section {
      padding: 2.5rem 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 90px 0 50px;
    }

    .questions-section {
      margin-bottom: 2.5rem;
    }

    .question {
      padding: 0.75rem 1.25rem;
      margin-bottom: 1rem;
    }

    .question h2 {
      font-size: 1rem;
      line-height: 1.3;
    }

    .solution-section {
      padding: 2rem 1.25rem;
    }

    .hero-description {
      font-size: 1.125rem;
      margin-bottom: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 80px 0 40px;
    }

    .questions-section {
      margin-bottom: 2rem;
    }

    .question {
      padding: 0.625rem 1rem;
      margin-bottom: 0.875rem;
    }

    .question h2 {
      font-size: 0.9rem;
      line-height: 1.2;
    }

    .solution-section {
      padding: 1.75rem 1rem;
      margin-top: 1.5rem;
    }

    .solution-section h1 {
      font-size: clamp(1.75rem, 8vw, 2.5rem);
      margin-bottom: 1rem;
    }

    .hero-description {
      font-size: 1rem;
      margin-bottom: 1.25rem;
    }

    .guarantee {
      font-size: 0.8rem;
    }
  }
</style>
</section>